<resources>

    <!-- Themes. -->
    <style name="Theme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="cardViewStyle">@style/CardView.Light.Custom</item>

    </style>

    <style name="Theme.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="cardViewStyle">@style/CardView.Dark.Custom</item>
    </style>

    <!-- Light Styles -->

    <style name="CardView.Light.Custom">
        <item name="android:layout_marginTop">@dimen/cardview_default_margin_top</item>
        <item name="android:padding">@dimen/article_cardview_padding</item>
    </style>

    <!-- Dark Styles -->

    <style name="CardView.Dark.Custom">
        <item name="android:layout_marginTop">@dimen/cardview_default_margin_top</item>
        <item name="android:padding">@dimen/article_cardview_padding</item>
    </style>
</resources>
